<% layout('/layout/boilerplate') %> 
  <h1>Connect with Companies</h1>
  <a href="/companies/new">Register your Company</a>
  
    <% for(let company of companies){ %>
      <div class="card mb-3">
        <div class="row">
          <div class="col-md-4">
            <img class="img-fluid" src="<%= company.image %>" alt="">
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title"><%= company.title %></h5>
              <p class="card-text"><%= company.description %></p>
              <p class="card-text">
                <small class="text-muted"><%= company.location %></small>
              </p>
              <a href="/companies/<%= company._id  %>" class="btn btn-primary">Learn More</a>
            </div>
          </div>
        </div>
      </div>
    <% } %> 
  