<% layout('/layout/boilerplate') %> 
<div class="row">
  <h1 class="text-center">Edit Your Company</h1>
  <div class="col-6 offset-3">
    <form action="/companies/<%= company._id  %>/?_method=PUT" method="POST">
      <div class="mb-3">
        <label class="form-label" for="name">Name:</label>
        <input class="form-control" type="text" id="name" name="company[name]" value="<%= company.name %>">
      </div>
      <div class="mb-3">
        <label class="form-label" for="company-type">Company Type:</label>
        <input class="form-control" type="text" id="company-type" name="company[type]" value="<%= company.type %>">
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Image URL:</label>
        <input class="form-control" type="text" id="image" name="company[image]" value="<%= company.image %>">
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location:</label>
        <input class="form-control" type="text" id="location" name="company[location]" value="<%= company.location %>">
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Company Type:</label>
        <textarea class="form-control" type="text" id="description" name="company[description]"><%= company.description %></textarea>
      </div>
      <div class="mb-3">
        <button class="btn btn-success" type="submit">Update Your Company</button>
      </div>
    </form>
    <a href="/companies/<%= company._id %>">Go Back</a>
  </div>
</div>